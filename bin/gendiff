#!/usr/bin/env php
<?php
//ниже код для отключения предпреждения которое выкидывает библотека funct из-за какой-то несовместимости
error_reporting(E_ALL & ~E_DEPRECATED);
require_once __DIR__ . '/../vendor/autoload.php';

use function Hexlet\Code\Parser\parseFile;

$doc = <<<DOC

Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

use Docopt\Handler;

$args = (new Handler())->handle($doc);

if ($args['--help']) {
    echo $doc;
    exit(0);
}

if ($args['--version']) {
    echo "gendiff 0.1.0\n";
    exit(0);
}

if ($args["<firstFile>"]) {
    $pathToFirstFile = realpath($args["<firstFile>"]);
    if ($pathToFirstFile === false) {
        echo "Файл {$args["<firstFile>"]} не найден\n";
        exit(1);
    }
    $firstFile = file_get_contents($pathToFirstFile);
    $parsedFirstFile = parseFile($firstFile);
    print_r($parsedFirstFile);
    // echo $firstFile;
} 

if ($args["<secondFile>"]) {
    $pathToSecondFile = realpath($args["<secondFile>"]);
    if ($pathToSecondFile === false) {
        echo "Файл {$args["<secondFile>"]} не найден\n";
        exit(1);
    }
    $secondFile = file_get_contents($pathToSecondFile);
    $parsedSecondFile = parseFile($secondFile);
    print_r($parsedSecondFile);
    // echo $secondFile;
} 

